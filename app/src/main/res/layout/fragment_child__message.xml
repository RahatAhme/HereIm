<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="50dp"
    tools:context=".Child_Message">

    <Button
        android:id="@+id/mgsToPrent_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Message to Parent"
        android:layout_marginVertical="35dp"
        android:textColor="#FF5722"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:paddingVertical="20dp"
        android:layout_centerInParent="true"
        android:background="#6FFFEB3B"
        />

    <Button
        android:id="@+id/mgsToPolice_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Message to Police"
        android:paddingVertical="20dp"
        android:textColor="#FF5722"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:layout_centerInParent="true"
        android:layout_above="@id/mgsToPrent_id"
        android:background="#6FFFEB3B"
        />

    <Button
        android:id="@+id/mgsToBoth_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Message To Both"
        android:textColor="#FF5722"
        android:textSize="20sp"
        android:textStyle="bold"
        android:paddingVertical="20dp"
        android:textAllCaps="false"
        android:layout_centerInParent="true"
        android:layout_below="@id/mgsToPrent_id"
        android:background="#6FFFEB3B"
        />

</RelativeLayout>